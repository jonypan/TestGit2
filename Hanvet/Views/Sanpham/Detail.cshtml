@model Extend.DataAccess.DTO.ProductDetail

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="product-detail bg-gray">
    <div class="container">
        <div class="product-detail-inner clearfix">
            <div class="product-detail-left">
                <div class="product-detail-img">
                    <div class="tb-table">
                        <div class="tb-row">
                            <div class="tb-cell">
                                <img width="500" src="@Model.Image" alt="@Model.Title" />
                            </div>
                        </div>
                    </div>
                </div><!-- product-detail-img -->
                <div class="product-detail-thumb">
                    <ul>
                        <li class="active"><a href="@Model.RwURL" title="@Model.Title"><img src="@Model.Image" alt="@Model.Title" /></a></li>
                    </ul>
                </div><!-- product-detail-thumb -->

                <div class="clearfix"></div>
            </div><!-- product-detail-left -->

            <div class="product-detail-right">
                <div class="product-detail-row">
                    <div class="product-detail-title"><h1>@Model.Title</h1></div>
                </div>
                <div class="product-detail-row">
                    <div class="product-detail-desc">@Model.CateName</div>
                    <!--<div class="product-detail-time"><i class="fa fa-calendar-o"></i>Aug 27, 2016</div>-->
                </div>
                <!--
                <div class="product-detail-row">
                    <span class="icon-no1"></span>
                </div>
                -->
                <div class="product-detail-row">
                    <div class="maincontent">
                        @Model.Summary
                    </div><!-- maincontent -->
                </div>
            </div><!-- product-detail-right -->
        </div><!-- product-detail-inner -->

        <div class="product-tabs">
            <ul role="tablist">
                <li role="presentation" class="active"><a role="tab" data-toggle="tab" href="#tab1">Thông tin chi tiết</a></li>
                <li role="presentation"><a role="tab" data-toggle="tab" href="#tab2">Câu hỏi thường gặp</a></li>
                <li role="presentation"><a role="tab" data-toggle="tab" href="#tab3">Hỏi - đáp</a></li>
            </ul>
        </div><!-- product-tabs -->
    </div><!-- container -->
</div><!-- product-detail -->

<div class="product-content bg-white">
    <div class="container">
        <div role="tabpanel" class="product-pane active" id="tab1">
            <div class="product-content-list">
                <div class="product-content-item clearfix active">
                    <label>Nội dung:</label>
                    <div class="maincontent">
                        @Model.Content
                    </div>
                </div><!-- product-content-item -->
            </div><!-- product-content-list -->
            <div class="product-content-more"><a href="#"><span class="pcm-icon"><i class="icon20-double-down"></i></span>Xem thêm</a></div>
        </div><!-- product-pane -->

        <div role="tabpanel" class="product-pane" id="tab2">
            <div class="faqs clearfix">
                <div class="faq-list">
                    <div class="faq-item">
                        <div class="faq-item-title">
                            <div class="faq-item-icon"><i class="icon32-faq"></i></div>
                            <div class="faq-item-name">Làm thế nào để biết trẻ bị suy dinh dưỡng?</div>
                        </div><!-- faq-item-title -->
                        <div class="faq-item-content">
                            <label>Trả lời:</label>
                            <div class="maincontent">
                                <p>
                                    Muốn biết trẻ c&oacute; bị suy dinh dưỡng hay kh&ocirc;ng, c&aacute;c b&agrave; mẹ cần phải theo d&otilde;i trẻ c&acirc;n nặng thường xuy&ecirc;n theo biểu đồ ph&aacute;t triển c&acirc;n nặng, chiều cao của trẻ.<br />
                                    Nếu thấy 2, 3 th&aacute;ng m&agrave; trẻ kh&ocirc;ng l&ecirc;n c&acirc;n cần phải đưa trẻ đi kh&aacute;m b&aacute;c sĩ để t&igrave;m nguy&ecirc;n nh&acirc;n.
                                </p>
                            </div>
                        </div><!-- faq-item-content -->
                    </div><!-- faq-item -->
                    <div class="faq-item">
                        <div class="faq-item-title">
                            <div class="faq-item-icon"><i class="icon32-faq"></i></div>
                            <div class="faq-item-name">Lời khuyên giúp trẻ biếng ăn?</div>
                        </div><!-- faq-item-title -->
                        <div class="faq-item-content">
                            <label>Trả lời:</label>
                            <div class="maincontent">
                                <p>
                                    <strong>Điều trị bằng thuốc</strong><br />
                                    T&ugrave;y theo triệu chứng bệnh m&agrave; c&oacute; thể sử dụng thuốc điều trị của b&aacute;c sĩ. Trong trường hợp cần c&oacute; thể bổ sung c&aacute;c men ti&ecirc;u h&oacute;a enzym, vitamin v&agrave; vi lượng c&oacute; vai tr&ograve; k&iacute;ch th&iacute;ch chuyển h&oacute;a v&agrave; ti&ecirc;u h&oacute;a của cơ thể theo hướng dẫn của b&aacute;c sĩ. Viaviovit l&agrave; một sản phẩm bổ sung hệ vi sinh vật, c&aacute;c vitamin cần thiết gi&uacute;p tăng cường hệ ti&ecirc;u h&oacute;a thường d&ugrave;ng cho c&aacute;c trường hợp trẻ biếng ăn, trẻ bị ti&ecirc;u h&oacute;a, t&aacute;o b&oacute;n, ch&aacute;n ăn...
                                </p>
                            </div>
                        </div><!-- faq-item-content -->
                    </div><!-- faq-item -->
                </div><!-- faq-list -->
                <div class="faq-view">
                    <label>Trả lời:</label>
                    <div class="maincontent"></div>
                </div><!-- faq-view -->
            </div><!-- faqs -->
        </div><!-- product-pane -->

        <div role="tabpanel" class="product-pane" id="tab3">
            <div class="form-title">Chào bạn ! Hãy để lại câu hỏi, chúng tôi sẽ giải đáp những thắc mắc của bạn một cách nhanh nhất !</div>
            <div class="form clearfix">
                <div class="form-left">
                    <div class="form-group">
                        <label>Họ tên <span class="text-warning">(*)</span>:</label>
                        <input type="text" name="name" id="contactName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Email <span class="text-warning">(*)</span>:</label>
