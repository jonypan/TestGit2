                        <label>Số điện thoại <span class="text-warning">(*)</span>:</label>
                        <input type="text" name="phone" id="contactPhone" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Sản phẩm quan tâm <span class="text-warning">(*)</span>:</label>
                        <input type="text" name="title" id="contactTitle" class="form-control" value="Ampelop" />
                        <input type="hidden" name="product_id" id="product_id" value="11" />
                    </div>
                </div>
                <div class="form-right">
                    <div class="form-group">
                        <label>Nội dung <span class="text-warning">(*)</span>:</label>
                        <textarea class="form-control" name="contactContent" id="contactContent"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-success send-product">Gửi câu hỏi<i class="fa fa-angle-double-right icon-right"></i></button>
                    </div>
                </div>
            </div><!-- form -->
        </div><!-- product-pane -->
    </div><!-- container -->
</div><!-- product-content -->

